<Window x:Class="EnvironmentPaths.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnvironmentPaths"
        mc:Ignorable="d"
        Title="Environment Variable Viewer" Height="350" Width="525">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="60*"/>
			<ColumnDefinition Width="74*"/>
			<ColumnDefinition Width="383*"/>
		</Grid.ColumnDefinitions>
		<Label x:Name="label" Content="Variable" HorizontalAlignment="Left" Margin="22,18,0,0" VerticalAlignment="Top" Width="59" Grid.ColumnSpan="2"/>
		<ComboBox x:Name="cbVariable" HorizontalAlignment="Left" Margin="37,14,0,0" VerticalAlignment="Top" Width="397" SelectionChanged="cbVariable_SelectionChanged" Grid.Column="1" Grid.ColumnSpan="2"/>
		<TextBox x:Name="tbSplitVariable" HorizontalAlignment="Left" Margin="22,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="219" Width="456" Grid.ColumnSpan="3"/>
		<Label x:Name="label1" Content="Split Content:" HorizontalAlignment="Left" Margin="22,49,0,0" VerticalAlignment="Top" Height="28" Width="456" Grid.ColumnSpan="3"/>

	</Grid>
</Window>
